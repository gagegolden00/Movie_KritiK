<%= form_with(model: @review, class: "w-full") do |form| %>
  <%= form.hidden_field :api_movie_id, value: @movie_data["imdbID"] %>
  <% if @review.errors.any? %>
    <div>
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :review %>
    <%= form.text_area :content, rows: 10, class: "block shadow rounded-md border-4 border-double border-slate-300 outline-none px-3 py-2 mt-2 mr-1 w-full" %>
  </div>
  <div class="">
    <%= form.label :score %>
    <%= form.text_field :score, class: "block shadow rounded-md border-4 border-double border-slate-300 outline-none px-3 py-2 mt-2" %>
  </div>
  <div class="actions mt-4 flex">
    <%= form.submit value: "Save", class: "bg-green-50 hover:bg-green-100 border-2 border-green-600 py-2 px-4 rounded mr-2 w-24" %>
    <%= link_to "Cancel", reviews_search_reviews_path, class: "text-center bg-red-50 hover:bg-red-100 border-2 border-red-600 py-2 px-4 w-24 rounded" %>
  </div>
<% end %>
