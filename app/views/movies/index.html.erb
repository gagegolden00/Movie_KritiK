<%= stylesheet_link_tag 'formdropdown', media: 'all' %>

<body class="">
  <header class="flex justify-center">
    <!-- Search form -->
    <%= form_with(model: @movie, url: reviews_search_reviews_path, method: :get, class: "flex flex-col lg:w-1/2") do |sel| %>
      <div class="flex items-center justify-center" data-controller="clearform">
        <div class="flex flex-col lg:flex-row lg:justify-start lg:w-full lg:h-10">
        <%= sel.text_field :title, value: params.dig(:movie, :title), placeholder: 'Search movies', class: "lg:w-3/5 rounded-md" %>
        <%= sel.submit "Search", class: "bg-blue-400 rounded-md lg:p-2 lg:ml-4 hover:cursor-pointer" %>
        <%= link_to "Reset search", "#", class: "w-30 h-10 bg-white border-2 border-blue-400 text-blue-400 rounded-md lg:py-2 lg:px-4 lg:ml-5 whitespace-nowrap", "data-action" => "click->clearform#clearForm" %>
        <% if @user.present? && @user.admin?%>
          <%= link_to "New Review", reviews_search_reviews_path, class: "w-30 h-10  lg:ml-5 bg-green-400 rounded-md lg:py-2 lg:px-4 whitespace-nowrap"%>
        <%end%>
        </div>
      </div>

      <div class="flex justify-between mt-4">
        <button class="border-2 border-gray-400 w-1/5 text-start pl-2 lg:pl-4 h-8">Year</button>
        <button class="border-2 border-gray-400 w-1/5 text-start pl-0.5 lg:pl-4 h-8">Rating</button>
        <button class="border-2 border-gray-400 w-1/5 text-start pl-1 lg:pl-4 h-8">Genre</button>
        <button class="border-2 border-gray-400 w-1/5 text-start pl-1 lg:pl-4 h-8">Score</button>
      </div>

      </div>
    <% end %>

  </header>
  <main class="flex flex-row flex-wrap">
<% if @movies.present? %>
  <% @movies.each do |movie|  %>
    <div class="flex flex-col items-center w-1/2 lg:w-1/4 border-2 mt-10">
      <div class="flex-row w-3/5 h-2/5 lg:w-3/5 lg:h-3/5 mb-2 mt-10 mr-10 ml-10 rounded overflow-hidden flex-grow">
        <div class="aspect-w-3 aspect-h-4 border-2">
          <img src="<%= movie['Poster'] %>" alt="Movie Poster" class="object-cover object-center w-full h-full">
        </div>
      </div>

      <div class="flex flex-col items-center w-full p-4 bottom-0">
        <h2 class="text-center mb-4 w-4/5"><%= "title" %></h2>
        <p>score</p>

      </div>
    </div>
  <% end %>
  <% end %>
    </div>
  </main>
</body>



