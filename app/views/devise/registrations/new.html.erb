<main>
  <div class="flex justify-center flex-col items-center">
    <div class="lg:mb-2 flex flex-col justify-center">
      <a href="/" class=" mb-4 mt-10 flex text-black text-3xl lg:text-7xl font-bold">The Movie Critic</a>
      <h2 class="flex justify-center lg:mt-10 font-bold">Sign up form</h2>
    </div>
    <div class="flex justify-center">
      <%= render "devise/shared/user_error_messages", resource: resource %>
    </div>
    <div class="flex justify-center w-3/4 lg:w-1/4 bg-white">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="lg:flex">
          <div class="flex flex-col justify-center items-center mr-2 mt-6">
            <%= f.label :first_name, class: "font-bold mr-auto" %>
            <%= f.text_field :first_name, autofocus: true, class: "lg:w-full rounded" %>
          </div>
          <div class="flex flex-col justify-center items-center mt-6">
            <%= f.label :last_name, class: "font-bold mr-auto" %>
            <%= f.text_field :last_name, autofocus: true, class: "lg:w-full rounded" %>
          </div>
        </div>
        <div class="flex flex-col justify-center items-center lg:w-full mt-4">
          <div class="flex flex-col w-full">
            <%= f.label :username, class: "font-bold mr-auto" %>
            <%= f.text_field :username, autofocus: true, class: "lg:w-full rounded" %>
          </div>
        </div>
        <div class="flex flex-col justify-center items-center w-full mt-4">
          <div class="flex flex-col w-full">
            <%= f.label :email, class: "font-bold mr-auto" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "lg:w-full rounded" %>
          </div>
        </div>
        <div class="flex flex-col justify-center items-center w-full mt-4">
          <div class="flex flex-col w-full">
            <%= f.label :password, class: "font-bold mr-auto" %>
            <% if @minimum_password_length %>
              <em class="text-sm mr-auto">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "lg:w-full rounded" %>
          </div>
        </div>
        <div class="flex flex-col justify-center items-center w-full mt-4">
          <div class="flex flex-col w-full">
            <%= f.label :password_confirmation, class: "font-bold mr-auto" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "lg:w-full rounded" %>
            <div>
            </div>
            <div class="flex flex-col justify-center items-center w-full mt-8">
              <div class="flex" >
                <%= f.submit "Create an Account", class: "bg-blue-500 w-48 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col mt-10 justify-center items-center mb-20">
      <p class="flex mb-2 font-bold">Already have an account?</p>
      <%= link_to "Sign in", root_path, class: "text-center bg-blue-500 text-white w-48 px-4 py-2 rounded-md hover:bg-blue-600", id: "signin" %>
    </div>
  </div>
</main>
