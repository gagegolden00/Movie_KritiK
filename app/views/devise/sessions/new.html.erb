
  <div class=" fixed flex items-center justify-center z-50 bg-opacity-50">
    <div class="px-3 py-2">

      <div class="mb-20 flex justify-center">
        <a href="/" class="text-black text-xl font-bold">The Movie Critic</a>
      </div>

      <div class="border-2 p-5">
      <h2 class="text-3xl font-bold text-center mb-6">Sign in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div class="flex flex-col">
          <%= f.label :email, class: "flex text-gray-700 text-sm font-semibold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <div>
          <%= f.label :password, class: "text-gray-700 text-sm font-semibold" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox text-indigo-500" %>
            <span class="text-gray-700 text-sm ml-2">Remember me</span>
          </div>
        <% end %>
        <div class="flex items-center justify-between">
          <div class="flex">
            <%= f.submit "Log in", data: { turbo_frame: "_top", action: "redirect_to tasks_url" }, class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
          </div>
        </div>
      <% end %>

      <div class="mt-4 text-sm text-center">
      <%= link_to "Forgot Password?", new_password_path(resource) %>
      </div>
    </div>

    <div class="mt-10 flex flex-col items-center bg-slate-200 ">
      <p class="flex items-center text-black mt-5">Create an Account Today!</p>
      <%= link_to "Sign Up", new_user_registration_path, class: " mt-4 ml-4 px-4 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  </div>
