<div class="max-w-xs mx-auto">
  <h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions", class: "w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

