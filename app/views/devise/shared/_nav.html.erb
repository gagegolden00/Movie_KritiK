<nav class="py-2  lg:text-black lg:h-20 lg:flex  lg:items-center border-2 border-slate-300">
  <%= link_to root_path, class: "mr-auto ml-20" do %>
    <%= image_tag("image.png", alt: "The Movie Critic site logo / link to home", width: 200, height: 200) %>
  <% end %>
  <div class="hidden md:flex md:ml-auto">
    <div class="flex items-center">
      <%= link_to "Movie reviews", movies_path, class: "lg:mr-10" %>
      <% if current_user.present? && current_user.admin? %>
        <%= link_to "New Review", "#", class: "lg:mr-10" %>
      <% else %>
        <%= link_to "My reviews", "#", class: "lg:mr-10" %>
      <% end %>
    </div>
    <div class="inline-block">
      <input class="hidden" />
      <label class="dropdown-label">
        <button class="mr-20">
          Profile
        </button>
      </label>
      <div class="dropdown-content">
        <p>Account Link</p>
        <%= link_to 'Logout', destroy_user_session_url, data: { turbo_method: :delete }, class: "text-black hover:text-gray-300 cursor-hover" %>
      </div>
    </div>
