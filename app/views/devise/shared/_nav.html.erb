<!-- mobile view hamburger -->


<div class="lg:hidden flex justify-end" data-controller="mobile-menu">
  <label for="menu-toggle" class="cursor-pointer" data-action="click->mobile-menu#toggleMenu">
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </label>
  <div class="w-40 h-40 mt-7 absolute bg-slate-100 rounded-lg shadow-lg z-10" data-mobile-menu-target="menuContent">
    <%= link_to "Movie reviews", movies_path, class: "block px-4 py-2 text-sm text-black hover:bg-gray-200" %>
    <% if @user&.admin? %>
      <%= link_to "New Review", reviews_search_reviews_path, class: "block px-4 py-2 text-sm text-black hover:bg-gray-200" %>
    <% else %>
      <%= link_to "My reviews", "#", class: "block px-4 py-2 text-sm text-black hover:bg-gray-200" %>
    <% end %>
    <p class="block px-4 py-2 text-sm text-black bg-slate-100 hover:bg-gray-200">Account Link</p>
    <%= link_to 'Logout', destroy_user_session_url, data: { turbo_method: :delete }, class: "block px-4 p-2 text-sm text-black hover:bg-gray-200" %>
  </div>
</div>

</nav>





