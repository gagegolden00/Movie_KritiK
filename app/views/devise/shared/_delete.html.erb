
<%= turbo_frame_tag "delete_modal" do%>
<div class="fixed top-0 left-0 w-full h-full flex items-center justify-center bg-gray-900 bg-opacity-75 z-50">
  <div class="bg-white border-2 border-red-500 w-full max-w-md mx-auto rounded-lg">
    <div class="p-4">
      <p class="text-center">Are you sure you want to delete - <%= @movie.title %>?</p>
    </div>
    <div class="px-4 py-2 flex justify-center ">
      <%= button_to 'Delete', movie_path(@movie), method: :delete, class: "mr-2 px-4 py-2 bg-red-400 text-white rounded" %>    
      <button class="px-4 py-2 border-2 border-red-400 text-red-400 rounded">Cancel</button>
    </div>
  </div>
</div>
<% end %>
